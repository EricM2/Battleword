<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.battleword">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GameWonActivity"></activity>
        <activity android:name=".LoadWordsActivity" />
        <activity android:name=".LeaveGameActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <service
            android:name=".BackgroundSoundService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".SettingsActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".NextStageActivity" />
        <activity android:name=".GameOverActivity" />
        <activity android:name=".NewGameActivity" />
        <activity
            android:name=".GameScenarioActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".PlayerControlActivity" />
        <activity android:name=".CountDownActivity" />
        <activity android:name=".GameSetupActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>