<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".GameWonActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/battleword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/construction_message"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings_background"
        android:fontFamily="@font/snapitc"
        android:gravity="center"
        android:padding="30dp"
        android:text="@string/game_won_message"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintStart_toStartOf="@+id/close"
        app:layout_constraintTop_toBottomOf="@+id/logo" />


    <TextView
        android:id="@+id/subscribe_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/snapitc"
        android:gravity="center"
        android:text="@string/subscribe_label"
        android:textColor="@color/colorSegondary"
        android:textSize="@dimen/play_button_text_size"
        app:layout_constraintEnd_toStartOf="@+id/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/social_net_container" />

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:background="@drawable/lifes_container_background"
        android:ems="10"
        android:fontFamily="@font/snapitc"
        android:gravity="center"
        android:hint="@string/subscribe_hint"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintEnd_toEndOf="@+id/play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscribe_label" />

    <TextView
        android:id="@+id/follow_us_label"
        android:layout_width="238dp"
        android:layout_height="43dp"
        android:fontFamily="@font/snapitc"
        android:gravity="center"
        android:text="@string/follow_us"
        android:textColor="@color/colorSegondary"
        android:textSize="@dimen/play_button_text_size"
        app:layout_constraintEnd_toEndOf="@+id/play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/play"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/game_button_background"
        android:fontFamily="@font/snapitc"
        android:gravity="center"
        android:text="@string/play_from_last_stage"

        android:textColor="@color/colorSegondary"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/construction_message" />

    <Button
        android:id="@+id/close"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@id/play"
        android:background="@drawable/game_button_background"
        android:fontFamily="@font/snapitc"
        android:gravity="center"
        android:text="@string/close"

        android:textColor="@color/colorSegondary"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/construction_message" />

    <LinearLayout
        android:id="@+id/social_net_container"
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/play"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/follow_us_label">

        <Button
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:background="@drawable/facebook" />

        <Button
            android:id="@+id/instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:background="@drawable/instagram" />

        <Button
            android:id="@+id/twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:background="@drawable/twitter" />

        <Button
            android:id="@+id/youtube"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:background="@drawable/youtube" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>