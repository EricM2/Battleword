<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="412dp"
    android:layout_height="123dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/header_background"
    tools:context=".GameHeaderFragment">
    <LinearLayout
        android:id="@+id/lifes_container"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/lifes_container_background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/life_1"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_life" />
        <ImageView
            android:id="@+id/life_2"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_life" />
        <ImageView
            android:id="@+id/life_3"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_life" />
        <ImageView
            android:id="@+id/life_4"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_life" />
        <ImageView
            android:id="@+id/life_5"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_life" />
        <ImageView
            android:id="@+id/life_6"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_no_life" />
        <ImageView
            android:id="@+id/life_7"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_no_life" />
        <ImageView
            android:id="@+id/life_8"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_no_life" />
        <ImageView
            android:id="@+id/life_9"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_no_life" />
        <ImageView
            android:id="@+id/life_10"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/diamond_no_life" />


    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="89dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/lifes_container"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="256456"
        android:gravity="center"
        android:textColor="@color/colorSegondary"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/score_textview_background"/>

    <ProgressBar
        android:id="@+id/time_progressbar"
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lifes_container"
        android:layout_marginTop="10dp"
        android:background="@drawable/progresbar_background"
        android:layout_height="20dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/time_progessbar_progress_background"/>

<LinearLayout
    android:id="@+id/word_found_led_container"
    android:orientation="horizontal"
    android:layout_width="180dp"
    android:layout_height="25dp"
    app:layout_constraintTop_toBottomOf="@id/time_progressbar"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    >
    <ImageView

        android:id="@+id/word_found_led_1"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_2"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_3"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_4"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_5"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_6"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_7"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_8"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_9"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_not_found_led"/>
    <ImageView
        android:id="@+id/word_found_led_10"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/word_found_led"/>
    
</LinearLayout>
    <LinearLayout
        android:id="@+id/stage_container"
        android:orientation="horizontal"
        android:layout_width="150dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/time_progressbar"
        app:layout_constraintStart_toEndOf="@id/word_found_led_container"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
         <TextView
             android:id="@+id/stage_label"
             android:layout_width="90dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="STAGE"
             android:textColor="@color/colorSegondary"/>
        <TextView
            android:id="@+id/stage_value"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>