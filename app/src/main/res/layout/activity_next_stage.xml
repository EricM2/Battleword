<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/app_background"
    tools:context=".NextStageActivity">

    <ImageView
        android:id="@+id/stage1_lock"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginBottom="92dp"
        android:src="@drawable/stage_1_lock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stage1_but"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/current_stage_button_background"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/stage1_lock"
        app:layout_constraintEnd_toEndOf="@id/stage1_lock"

        app:layout_constraintStart_toStartOf="@id/stage1_lock"
        app:layout_constraintTop_toTopOf="@id/stage1_lock"
         />


    <ImageView
        android:id="@+id/stage2_lock"
        android:layout_width="50dp"
        android:layout_height="50dp"


        android:layout_marginBottom="92dp"
        android:src="@drawable/stage_2_lock"
        app:layout_constraintBottom_toTopOf="@id/stage1_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stage2_but"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/stage_button_background"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/stage2_lock"
        app:layout_constraintEnd_toEndOf="@id/stage2_lock"

        app:layout_constraintStart_toStartOf="@id/stage2_lock"
        app:layout_constraintTop_toTopOf="@id/stage2_lock"
        />

    <ImageView
        android:id="@+id/stage3_lock"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginBottom="92dp"
        android:src="@drawable/stage_3_lock"
        app:layout_constraintBottom_toTopOf="@id/stage2_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stage3_but"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/stage_button_background"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/stage3_lock"
        app:layout_constraintEnd_toEndOf="@id/stage3_lock"

        app:layout_constraintStart_toStartOf="@id/stage3_lock"
        app:layout_constraintTop_toTopOf="@id/stage3_lock"
        />

    <ImageView
        android:id="@+id/stage5_lock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="92dp"
        android:src="@drawable/stage_5_lock"
        app:layout_constraintBottom_toTopOf="@id/stage4_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stage5_but"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/stage_button_background"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/stage5_lock"
        app:layout_constraintEnd_toEndOf="@id/stage5_lock"

        app:layout_constraintStart_toStartOf="@id/stage5_lock"
        app:layout_constraintTop_toTopOf="@id/stage5_lock"
        />


    <ImageView
        android:id="@+id/stage4_lock"
        android:layout_width="50dp"
        android:layout_height="50dp"


        android:layout_marginBottom="92dp"
        android:src="@drawable/stage_4_lock"
        app:layout_constraintBottom_toTopOf="@id/stage3_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stage4_but"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/stage_button_background"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/stage4_lock"
        app:layout_constraintEnd_toEndOf="@id/stage4_lock"

        app:layout_constraintStart_toStartOf="@id/stage4_lock"
        app:layout_constraintTop_toTopOf="@id/stage4_lock"
        />


</androidx.constraintlayout.widget.ConstraintLayout>