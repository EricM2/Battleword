<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenFragment"
    android:background="@drawable/screen_background">




    <TextView
        android:id="@+id/screen_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="_______________________________"
        android:fontFamily="@font/snapitc"
        android:textColor="#000"
        android:textSize="25dp"
        android:letterSpacing="0.1"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="380dp" />
    <TextView
        android:id="@+id/segondary_screen_text"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@id/tip_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text=""
        android:fontFamily="@font/snapitc"
        android:textColor="#F00"
        android:textSize="15dp"
        android:letterSpacing="0.4"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="380dp" />
    <Button
        android:id="@+id/tip_button"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/tip_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toEndOf="@id/segondary_screen_text"/>
    <TextView
        android:id="@+id/tip_text"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tip_button"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Tips"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/tip_text_background"/>






